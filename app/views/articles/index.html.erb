<h1>Articles listing page</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Descrition</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <%# DELETE article_path(article) %>
            <td><%= button_to 'Delete', article_path(article), method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>